<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <navigation-rule>
        <from-view-id>/winehome.xhtml</from-view-id>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/login.xhtml</from-view-id>
        <navigation-case>
            <from-action>wineHome</from-action>
            <to-view-id>/winehome.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>register</from-outcome>
            <to-view-id>/newCustomer.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/newCustomer.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/winehome.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>search</from-outcome>
            <to-view-id>/searchwines.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>allwines</from-outcome>
            <to-view-id>/wineList.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>cartitems</from-outcome>
            <to-view-id>/cartItems.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/searchwines.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>gohome</from-outcome>
            <to-view-id>/winehome.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/wineList.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/wineList.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>addtocart</from-outcome>
            <to-view-id>/addtoCart.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/addtoCart.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/cartItems.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/wineList.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>addtocart</from-outcome>
            <to-view-id>>/addtoCart.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
